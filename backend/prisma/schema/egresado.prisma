model Egresado {
  idEgresado   Int @id @default(autoincrement())
  idEstudiante Int @unique

  // ✅ ya NO obligatoria
  fechaEgreso DateTime? @db.Date

  // ✅ solo opciones en DTO (BD puede quedar opcional)
  situacionActual     String?
  situacionActualOtro String?

  // (resto de tus campos existentes)
  empresa             String?
  cargo               String?
  sueldo              Int?
  nivelRentas         String?
  anioIngresoLaboral  Int?
  anioSeguimiento     Int?

  telefono            String?
  emailContacto       String?
  direccion           String?
  linkedin            String?
  contactoAlternativo String?

  documentos DocumentoEgresado[]
  Estudiante Estudiante @relation(fields: [idEstudiante], references: [idEstudiante])
}



model DocumentoEgresado {
  idDocumento   Int      @id @default(autoincrement())
  nombre        String
  url           String
  fechaSubida   DateTime @default(now())
  idEgresado    Int

  Egresado      Egresado @relation(fields: [idEgresado], references: [idEgresado])

  @@index([idEgresado])
}
