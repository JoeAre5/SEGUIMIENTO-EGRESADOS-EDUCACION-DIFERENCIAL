model Egresado {
  idEgresado   Int @id @default(autoincrement())
  idEstudiante Int @unique

  fechaEgreso DateTime? @db.Date

  situacionActual    String
  empresa            String?
  cargo              String?
  sueldo             Int?
  anioIngresoLaboral Int?
  anioSeguimiento    Int     @default(2026)

  telefono            String?
  emailContacto       String?
  direccion           String?
  linkedin            String?
  contactoAlternativo String?

  situacionActualOtro String?
  nivelRentas         String?

  // ✅ NUEVOS CAMPOS DEL FORMULARIO
  anioFinEstudios Int?

  viaIngreso     String?
  viaIngresoOtro String?

  anioIngresoCarrera Int?

  genero                String?
  tiempoBusquedaTrabajo String?

  sectorLaboral     String?
  sectorLaboralOtro String?

  tipoEstablecimiento     String?
  tipoEstablecimientoOtro String?

  // ✅ RELACIÓN DOCUMENTOS
  documentos DocumentoEgresado[]

  Estudiante Estudiante @relation(fields: [idEstudiante], references: [idEstudiante])
}

model DocumentoEgresado {
  idDocumento Int      @id @default(autoincrement())
  nombre      String
  url         String
  fechaSubida DateTime @default(now())
  idEgresado  Int

  // ✅ RELACIÓN INVERSA
  Egresado Egresado @relation(fields: [idEgresado], references: [idEgresado])

  @@index([idEgresado])
}
