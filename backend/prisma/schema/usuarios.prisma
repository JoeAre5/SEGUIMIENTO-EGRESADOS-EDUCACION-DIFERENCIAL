model Usuario {
  id             Int         @id @default(autoincrement())
  username       String      @unique
  email          String      @unique
  hashedPassword String
  nombreCompleto String
  role           ROLE        @default(Docente)
  idEstudiante   Int?        @unique
  createdAt      DateTime    @default(now())
  isActive       Boolean     @default(true)
  updatedAt      DateTime    @updatedAt
  Estudiante     Estudiante? @relation("UsuarioEstudiante", fields: [idEstudiante], references: [idEstudiante])
}

enum ROLE {
  Administrador
  JC
  CoordinadorPractica
  Secretario
  Docente
  EGRESADO
}
