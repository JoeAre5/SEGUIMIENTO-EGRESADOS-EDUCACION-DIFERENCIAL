model Usuario {
  id             Int    @id @default(autoincrement())
  username       String @unique
  email          String @unique
  hashedPassword String
  nombreCompleto String
  role           ROLE   @default(Docente)

  // ✅ NUEVO (nullable para no romper nada)
  idEstudiante   Int?
}

enum ROLE {
  Administrador
  JC
  CoordinadorPractica
  Secretario
  Docente

  // ✅ NUEVO
  EGRESADO
}
